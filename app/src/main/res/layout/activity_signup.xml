<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="305dp"
        android:id="@+id/upper_layout"
        android:background="@drawable/loginbanner"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="200dp"
            android:background="@drawable/newarabelogo"></LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="260dp"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/upper_layout"
        android:background="@drawable/loginbox"
        android:id="@+id/ineer_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_editor_absoluteX="206dp"
            app:layout_editor_absoluteY="245dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SIGN UP PAGE"
                android:textColor="@color/black"
                android:layout_marginLeft="60dp"
                android:textSize="25dp"
                android:layout_marginTop="20dp"
                />


            <EditText
                android:id="@+id/Name"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="username" />

            <EditText
                android:id="@+id/pass"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="password" />

            <EditText
                android:id="@+id/email"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="email" />

            <Button
                android:id="@+id/button3"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:text="signup" />
        </LinearLayout>



    </LinearLayout>

</RelativeLayout>