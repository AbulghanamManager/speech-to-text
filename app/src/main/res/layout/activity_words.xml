<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WORDS.Words"
    android:orientation="vertical"
    android:background="@drawable/alphabetlayout">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="كلمات ترحيبية"
        android:textSize="50dp"
        android:textColor="@color/black"
        android:layout_marginTop="60dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">


    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:id="@+id/greetings"
            android:text="Greetings"
            android:background="@drawable/custom_button"
            app:backgroundTint="@null"
            android:textColor="@color/black"/>

        <Button
            android:layout_marginTop="5dp"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:id="@+id/peace"
            android:text="Peace be with you"
            android:background="@drawable/custom_button"
            app:backgroundTint="@null"
            android:textColor="@color/black"/>

        <Button
            android:layout_marginTop="5dp"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:id="@+id/same"
            android:text="Same to you"
            android:background="@drawable/custom_button"
            app:backgroundTint="@null"
            android:textColor="@color/black"/>

        <Button
            android:layout_marginTop="5dp"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:id="@+id/how"
            android:text="How are you"
            android:background="@drawable/custom_button"
            app:backgroundTint="@null"
            android:textColor="@color/black"/>

        <Button
            android:layout_marginTop="5dp"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:id="@+id/good"
            android:text="Fine, Thanks god"
            android:background="@drawable/custom_button"
            app:backgroundTint="@null"
            android:textColor="@color/black"/>

        <Button
            android:layout_marginTop="5dp"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:id="@+id/morning"
            android:text="Good morning"
            android:background="@drawable/custom_button"
            app:backgroundTint="@null"
            android:textColor="@color/black"/>

        <Button
            android:layout_marginTop="5dp"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:id="@+id/evening"
            android:text="Good Evening"
            android:background="@drawable/custom_button"
            app:backgroundTint="@null"
            android:textColor="@color/black"/>




    </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:id="@+id/welcome"
                android:text="Welcome"
                android:background="@drawable/custom_button"
                app:backgroundTint="@null"
                android:textColor="@color/black"/>

            <Button
                android:layout_marginTop="5dp"
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:id="@+id/come"
                android:text="Please, come in"
                android:background="@drawable/custom_button"
                app:backgroundTint="@null"
                android:textColor="@color/black"/>

            <Button
                android:layout_marginTop="5dp"
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:id="@+id/thank"
                android:text="Thank you"
                android:background="@drawable/custom_button"
                app:backgroundTint="@null"
                android:textColor="@color/black"/>

            <Button
                android:layout_marginTop="5dp"
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:id="@+id/nothing"
                android:text="For nothing"
                android:background="@drawable/custom_button"
                app:backgroundTint="@null"
                android:textColor="@color/black"/>

            <Button
                android:layout_marginTop="5dp"
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:id="@+id/bye"
                android:text="Good bye"
                android:background="@drawable/custom_button"
                app:backgroundTint="@null"
                android:textColor="@color/black"/>

            <Button
                android:layout_marginTop="5dp"
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:id="@+id/bye_bye"
                android:text="Bye Bye"
                android:background="@drawable/custom_button"
                app:backgroundTint="@null"
                android:textColor="@color/black"/>

            <Button
                android:layout_marginTop="5dp"
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:id="@+id/hello"
                android:text="Hello"
                android:background="@drawable/custom_button"
                app:backgroundTint="@null"
                android:textColor="@color/black"
                />
        </LinearLayout>

    </LinearLayout>



</LinearLayout>