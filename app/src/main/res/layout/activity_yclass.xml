<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VowelsWord.Yclass"
    android:orientation="vertical"
    android:background="@drawable/alphabetlayout"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="كلمات حرف العلة ياء"
        android:textSize="50dp"
        android:textColor="@color/black"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/milk"
        android:text="Milk حليب"
        android:background="@drawable/custom_button"
        app:backgroundTint="@color/yellow"
        android:textColor="@color/black"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/korsi"
        android:text="Chair كرسي"
        android:background="@drawable/custom_button"
        app:backgroundTint="@color/yellow"
        android:textColor="@color/black"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/feel"
        android:text="Elephant فيل"
        android:background="@drawable/custom_button"
        app:backgroundTint="@color/yellow"
        android:textColor="@color/black"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reesh"
        android:text="Feather ريش"
        android:background="@drawable/custom_button"
        app:backgroundTint="@color/yellow"
        android:textColor="@color/black"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/baet"
        android:text="Home البيت"
        android:background="@drawable/custom_button"
        app:backgroundTint="@color/yellow"
        android:textColor="@color/black"/>

    </LinearLayout>

</LinearLayout>